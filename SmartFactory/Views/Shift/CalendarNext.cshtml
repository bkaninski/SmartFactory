@model IEnumerable<ShiftQueryModel>
@{
    ViewBag.Title = "График на смените";
}


<h2 class="text-center">@ViewBag.Title</h2>

  

@if (Model.Count()==0)
{
    <hr />
    <p></p>
    <div class="row">
        <div class="col-6 mx-auto ">
            <div class="d-flex align-items-justify justify-content-evenly">
                <a asp-controller="Shift" asp-action="Calendar" class="btn btn-secondary pull-left ">Прехдоден Месец</a>
            </div>
        </div>
    </div>
    <h3 class="text-center">Няма добавени смени за този месец</h3>
}
else
{
    <h2 class="text-center">за месец @Model.First().Date.Month.@Model.First().Date.Year </h2>
    <hr />

<p></p>
<div>
    <a asp-controller="Shift" asp-action="Calendar" class="btn btn-warning">Прехдоден Месец</a>

</div>
<div class="row mb-5">
    <table class="table table-hover">
        <thead>
            <tr class="text-center">
                <th scope="col">Дата</th>
                <th scope="col">Смяна</th>
                <th scope="col">Електротехник</th>
                <th scope="col">Оператор подготовка</th>
                <th scope="col">Оператор пакетиране</th>
                <th scope="col">Опции</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shift in Model)
            {
                <tr>


                    <td class="text-justify">@shift.Date.ToShortDateString()</td>
                    <td class="text-justify">@shift.TypeOfShift</td>
                    <td class="text-justify">@shift.Electrician</td>
                    <td class="text-justify">@shift.OperatorPreparation</td>
                    <td class="text-justify">@shift.OperatorPackaging</td>
                    <td class="text-center">
                        <a asp-controller="Shift" asp-action="Edit" asp-route-id="@shift.Id"
                       class="btn btn-warning">Промяна</a>


                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
}